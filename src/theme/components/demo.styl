.tk-hello-world-h1 {
  color: $color_theme;
}

.tk-demo-switch {
  user-select none
  display: inline-block;

  > span, > div {
    float: left;
  }

  input {
    display: none;
  }

  &-box {
    width: 40px;
    height: 20px;
    background-color: $color_theme;
    border-radius: 10px;
    display: flex;
    align-items: center;
    padding: 0 2px;
    box-sizing: border-box;
    position: relative;
    cursor: pointer;
    margin-left: 6px;

    &.closed {
      background-color: $color_gray;
    }

    span {
      width: 16px;
      height: 16px;
      border-radius: 50%;
      display: inline-block;
      background-color: $color_white;
      position: absolute;
      left: 22px;
      transition: 200ms;

      &.closed {
        left: 2px;
      }
    }
  }
}
